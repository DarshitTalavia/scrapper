{
  "manifest_version": 3,
  "name": "PitchBook Data Scraper",
  "version": "0.1.3",
  "description": "scrape tables from any pitchbook page in one tap.",
  "permissions": ["activeTab", "clipboardWrite", "scripting"],
  "host_permissions": ["https://*.pitchbook.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "PitchBook Data Scraper"
  },
  "content_scripts": [
    {
      "matches": ["https://*.pitchbook.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
